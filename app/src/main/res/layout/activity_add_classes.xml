<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddClasses">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Add Classes"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/nameOfClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of Class"
        android:inputType="textCapWords"
        android:padding="16dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workload (Hours):"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/workloadID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id34hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectWorkload"
                android:text="34h"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/id68hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectWorkload"
                android:text="68h"
                android:textSize="20dp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade: "
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/gradeSpinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <EditText
        android:id="@+id/semester"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Semester"
        android:inputType="numberSigned"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="addClass"
        android:padding="16dp"
        android:text="Add Class"
        android:textSize="18sp" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Classes"
        android:layout_gravity="center_horizontal"
        android:onClick="changeActivity" />
</LinearLayout>
